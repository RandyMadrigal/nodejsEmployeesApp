<main>
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-8 col-lg-8 offset-2">
        <h4 class="mb-3">
             Agregar nuevo Cargo. 
        </h4>

        <form action="/add-position" method="POST">
          <div class="row g-3">
                <div class="col-sm-6">
                <label for="Nombre" class="form-label">Nombre</label>
                <input
                    type="text"
                    class="form-control"
                    id="Nombre"
                    name="Nombre"
                    required
                />
                </div>
            </div>

            <div class="d-flex mt-2">
                <button class="btn btn-success me-2" type="submit">Agregar</button>
                <a class="btn btn-secondary" type="button" href="/index">Atras</a>
              </div>
            </form>
          </div>

         <section>

    <div class="py-4 bg-light">
      <div class="container">
        <div class="row row-cols-1 row-cols-sm-1 row-cols-md-3 g-3">
          {{#if hasItems}}
            {{#each item}}
              <div class="col">
                <div class="card shadow-lg text-dark">

                  <div class="card-body d-flex justify-content-center gap-3">
                    <p
                      class="card-title fs-5 fw-bold text-center"
                    >{{this.Nombre}}
                    </p>

                     <form action="/add-position" method="post">
                    <input type="hidden" name="Id" id="Id" value="{{this.Id}}">
                     <button class="btn btn-danger mb-1" type="submit"><i class="fa-sharp fa-solid fa-trash"></i></button>
                    </form>

                  </div>
                </div>
              </div>
            {{/each}}
          {{else}}
            <h5 class="text-center">No se han creado los cargos de la empresa</h5>
          {{/if}}
        </div>
      </div>
    </div>
  </section>

      </div>
    </div>
  </div>
</main>