<main>
  <section class="py-5 text-center container">
    <div class="row">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">NOMBRE DE LA EMPRESA SRL.</h1>
        <a href="/admin-options" class="btn btn-success my-2">Volver a opciones</a>
      </div>
    </div>
  </section>

  <section>
    <div class="py-5 bg-light">
      <div class="container">
        <div class="row row-cols-1 row-cols-sm-1 row-cols-md-3 g-3">
          {{#if hasItems}}
            {{#each item}}
              <div class="col">
                <div class="card shadow-lg text-dark">
                  <div class="card-body">
                    <p class="card-title fs-5 fw-bold">{{this.Nombre}}
                      {{this.Apellido}}
                    </p>
                    <p class="card-text">
                      <span class="fw-bold">Departamento:</span>
                      {{this.department.dataValues.Nombre}}</p>
                    <p class="card-text">
                      <span class="fw-bold">Cargo: </span>
                      {{this.position.dataValues.Nombre}}</p>
                    <p class="card-text"><span class="fw-bold">Fecha de Ingreso:
                      </span>
                      {{this.createdAt}}</p>

                    {{#if this.isVacaciones}}

                      <hr />

                      <h4>Vacaciones</h4>

                      <div class="d-flex flex-row justify-content-start gap-3">

                        <p class="card-text"><span class="fw-bold">Desde
                          </span>
                          {{this.StartVacaciones}}
                        </p>
                        <p class="card-text"><span class="fw-bold">Hasta
                          </span>
                          {{this.EndVacaciones}}
                        </p>
                      </div>

                    {{/if}}

                    <div
                      class="d-flex justify-content-between align-items-center"
                    >
                      <div class="btn-group">
                        <a
                          class="btn btn-success"
                          type="button"
                          href="/edit/{{this.Id}}?edit=true"
                        >Editar
                        </a>

                        <a
                          class="btn btn-danger"
                          type="button"
                          href="/delete/{{this.Id}}?delete=true"
                        >Cancelar Empleado
                        </a>

                        <input type="hidden" name="Id" value="{{this.Id}}" />

                      </div>
                    </div>
                  </div>
                </div>
              </div>
            {{/each}}
          {{else}}
            <h2 class="text-center">Employees not found</h2>
          {{/if}}
        </div>
      </div>
    </div>
  </section>
</main>